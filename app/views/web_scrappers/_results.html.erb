<h2>Best results we found for you</h2>
<div id="newsCarousal" class="carousel slide" data-bs-ride="carousel">
	<!-- Indicators/dots -->
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#newsCarousal" data-bs-slide-to="0" class="active"></button>
    <button type="button" data-bs-target="#newsCarousal" data-bs-slide-to="1"></button>
    <button type="button" data-bs-target="#newsCarousal" data-bs-slide-to="2"></button>
  </div>
	<div class="carousel-inner">
		<%@data.each do |key, news|%>
			<div class="carousel-item <%=key.downcase.to_s == 'indiatoday' ? 'active' : ''%>">
        <h1 style="text-align: center;"><%=key.to_s.titleize%></h1>
        <div class="row row-cols-1 row-cols-md-4 g-4">
  				<%news.each do |content|%>
            <div class='col'>
              <div class="card" style="width: 35rem;">
                 <div class="card-body">
    				  	   <h2 class="card-title"><%=link_to content['heading'], content['url'], target: :_blank%></h2>
    				  	   <p class="card-text"><%= content['desc']%></p>
    				     </div>
              </div>
            </div>
  				<%end%>
        </div>
			</div>
		<%end%>
	</div>
	<!-- Left and right controls/icons -->
  <button class="carousel-control-prev" type="button" data-bs-target="#newsCarousal" data-bs-slide="prev">
    <span class="carousel-control-prev-icon carousel-icon"></span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#newsCarousal" data-bs-slide="next">
    <span class="carousel-control-next-icon carousel-icon"></span>
  </button>
</div>
